<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="account_payment_format_checkprint_form_inherit" model="ir.ui.view">
        <field name="name">Format Check Print</field>
        <field name="model">account.payment</field>
        <field name="inherit_id" ref="account_check_printing.view_account_payment_form_inherited"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='check_number']" position="after">
                <field name="no_negociable" attrs="{'invisible': [('show_check_number', '=', False)]}"/>
            </xpath>
        </field>
    </record>

</odoo>